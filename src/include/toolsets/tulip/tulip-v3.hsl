include ~/toolsets/tulip/forge/tulip_v3_forge.hsl

toolset "tulip-v3" forge function "tulip_v3_forge" : forge helpers "tulip_v3_need_to_process_it" :
    command "compile": SOURCE <
        tulip --tlp=$SOURCE
    >
    command "mktab": SOURCE, OUTPUT <
        tulip --tlp=$SOURCE --out=$OUTPUT
    >
$
